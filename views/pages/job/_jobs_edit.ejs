<!-- Right offcanvas -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvas_job_update_<%=job.id%>" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title text-muted text-uppercase" id="offcanvasRightLabel">Sửa Ngành Nghề</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <!-- =========FORM======== -->
    <form action="/job/detail/<%=job.id %>/update" method="post">
        <div class="offcanvas-body p-0 overflow-hidden">
            <div data-simplebar style="height: calc(100vh - 150px);">
                <div class="acitivity-timeline p-4">
                    <div class="row g-3">
                        <div class="col-lg-12">
                            <div>
                                <label for="jobs" class="form-label">Tên Ngành Nghề</label>
                                <input type="text" id="jobs" name="jobs" value="<%= job.full_name %>" class="form-control" required />
                            </div>
                        </div>
                        <!--end col-->

                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="hstack gap-2 justify-content-end">
                <button type="submit" class="btn btn-success" id="add-btn">Cập nhật</button>
            </div>
        </div>
    </form>
</div>
<!--end offcanva -->