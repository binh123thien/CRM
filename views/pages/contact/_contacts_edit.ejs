<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvas_contact_update_<%=contact.id%>"
    aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header border-bottom">
        <h6 class="offcanvas-title text-muted text-uppercase" id="offcanvasRightLabel">Sửa thông tin Nhóm Khách</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <form action="/contact/detail/<%=contact.id %>/update" method="post">
        <div class="offcanvas-body p-0 overflow-hidden">
            <div data-simplebar style="height: calc(100vh - 150px);">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">
                        <div class="col-lg-12">
                            <div>
                                <label for="full_name" class="form-label">Tên Khách Hàng <span
                                        class="text-danger">*</span></label>
                                <input type="text" id="customername-field" class="form-control" name="full_name"
                                    placeholder="Nhập tên khách" value="<%=contact.full_name%>" required />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <label for="mobile" class="form-label">Số Điện Thoại <span
                                        class="text-danger">*</span></label>
                                <input type="number" id="mobile-field" class="form-control" name="mobile"
                                    placeholder="Nhập số điện thoại" value="<%=contact.mobile%>" required />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <label for="email" class="form-label">Email</label>
                                <input type="text" id="email-field" class="form-control" name="email"
                                    placeholder="Nhập Email" value="<%=contact.email%>" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="hstack gap-2 justify-content-end">
                <button type="submit" class="btn btn-success" id="add-btn">Cập nhật</button>
            </div>
        </div>
    </form>
</div>